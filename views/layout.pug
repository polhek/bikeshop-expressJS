doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    style.
      .active {
        display:block;
      }
  body
    div(class="mx-auto bg-black p-5 text-gray-400 font-mono")
      nav(class="flex-row md:flex md:justify-between")
        div(class="flex flex-row justify-between")
          div(class="md:hidden")
            svg.fill-current#hamburgerbtn(viewBox="0 0 100 80" width="40" heigh="40")
              rect(width="100" height="20")
              rect(y="30" width="100" height="20")
              rect(y="60" width="100" height="20")
        ul#mobileMenu(class="hidden flex pt-10 md:pt-5 md:flex md:flex-row text-lg")
          li
            a(class="pr-5 hover:text-white hover:underline")
              | Bikeparts
          li
            a(class="pr-5 hover:text-white hover:underline")
              | Categories
          li
            a(class="pr-5 hover:text-white hover:underline")
              | Manufacturers

    block content
    script.
      let hamburger = document.getElementById('hamburgerbtn');
      let mobileMenu = document.getElementById('mobileMenu');
      hamburger.addEventListener('click', function(){
      mobileMenu.classList.toggle('active')
      });



