extends layout

block content
    div(class="block border bg-white shadow rounded-xl")
        h1(class="lg:text-3xl md:text-2xl pl-10 text-xl font-extrabold pt-5 pb-5 font-mono")= title
        div(class="flex  flex-col lg:flex-row font-mono ")
            div(class="lg:w-2/5 flex justify-center items-center p-2")
                img(class="w-10/12 h-2/3 md:h-auto rounded shadow " src="https://picsum.photos/seed/picsum/200/300", alt="placeholder")

            div(class="flex flex-col lg:w-3/5 justify-between  p-2")
                div
                    div
                        h2(class="text-xl  font-bold") Description:
                        p= bikepart.description
                    div
                        h2(class="text-xl pt-5 font-bold") Category:
                        p= bikepart.category.name
                    div(class="flex flex-row justify-between w-100 items-end")
                            div
                                h2(class="text-xl font-bold") Manufactured by:
                                p= bikepart.manufacturer.name
                            div
                                div(class="flex flex-row items-center")
                                    h2(class="text-xl  font-bold") Stock:
                                    p(class="text-xl")= bikepart.stock
                                div(class="flex flex-row items-center")
                                    h2(class="text-xl   font-bold") Price:
                                    p(class="text-xl") #{bikepart.price}â‚¬
                    hr

                div(class="flex flex-row justify-between w-100 ")
                        a(href="" )
                            button(class="bg-blue-700 hover:bg-blue-800 hover:shadow-md mt-5 mb-5 text-sm md:text-lg rounded-full py-3 px-6 text-white") Manufacturer Details
                        a(href="")
                            button(class="bg-blue-700 hover:bg-blue-800 hover:shadow-md mt-5 mb-5 text-sm md:text-lg rounded-full py-3 px-6 text-white") Category Details

